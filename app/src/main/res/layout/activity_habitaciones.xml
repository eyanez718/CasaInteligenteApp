<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HabitacionesActivity">

    <TextView
        android:id="@+id/txtPresentacion"
        android:layout_width="330dp"
        android:layout_height="37dp"
        android:text="@string/hab_msj_principal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074" />

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="545dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPresentacion">
        <Switch
            android:id="@+id/swHabitacion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitación 1"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/swHabitacion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitación 2"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/swHabitacion3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitación 3"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/swHabitacion4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitación 4"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/swHabitacion5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitación 5"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/swHabitacion6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitación 6"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>